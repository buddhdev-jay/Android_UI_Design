<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edit_textStyle" parent="ThemeOverlay.AppCompat" >
        <item name="android:padding">@dimen/_12ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>
    <style name="social_media_button" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="fontFamily">@font/manropemedium</item>
        <item name="android:paddingStart">@dimen/_50sdp</item>
        <item name="android:paddingEnd">@dimen/_50sdp</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="otp_edit_text" parent="ThemeOverlay.AppCompat">
        <item name="android:fontFamily">@font/manropebold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textCursorDrawable">@drawable/cursor_style</item>
        <item name="android:backgroundTint">@color/green_500</item>
    </style>
    <style name="edit_text_header" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="fontFamily">@font/manropesemibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="button_style" parent="ThemeOverlay.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/manropebold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>